<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.AddUser">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add User Page "
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            
            
            <Label Text="Name" />
            <Entry Placeholder="Enter your name" x:Name="txtName" />
            <Label Text="Surname" />
            <Entry Placeholder="Enter your surname" x:Name="txtSurname" />
            <Label Text="Email" />
            <Entry Placeholder="Enter your email address" x:Name="txtEmail" />
            <Label Text="Phone" />
            <Entry Placeholder="Enter your phone number" x:Name="txtPhone" />
            
            <Label Text="Password" />
            <Entry Placeholder="Enter your phone password" x:Name="txtPassword" />

            <Button Text="Save" x:Name="saveButton"  Clicked="saveButton_Clicked" />
            <Button Text="Upload Photo" Clicked="Button_Clicked_1" />
            <Image x:Name="ProfileImage" Source="placeholder.png"/>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>