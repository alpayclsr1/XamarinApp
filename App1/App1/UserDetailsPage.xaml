<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.UserDetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Name:" />
                <Label x:Name="name" />
                <Label Text="Surname:" />
                <Label x:Name="surname" />
                <Label Text="Email:" />
                <Label x:Name="email" />
                <Label Text="Phone:" />
                <Label x:Name="phone" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>